#!/usr/bin/env zsh

xsetroot -bg black -fg white

setxkbmap jp
setxkbmap -option ctrl:nocaps

xbindkeys_autostart

# load settings
xfsettingsd &

# vmware
vmware-user-suid-wrapper

# transparency
compton &

# network manager widget
nm-applet &

# sound widget
#kmix &

# multi-touch trackpad gestures
#touchegg &

# japanese ime
ibus-daemon --daemonize --xim &

# power management
#xfce4-power-manager &

# start awesome wm
exec dbus-launch awesome 2>&1 > $HOME/.xsession-errors
